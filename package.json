{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "babel-swagger": "babel swagger.js --out-file dist/swagger.js",
    "babel-app": "babel app.js --out-file dist/app.js && npm run babel-swagger",
    "babel-server": "babel server/ -d dist/server/ && npm run babel-app",
    "build": "npm run clean && mkdir dist/ && npm run babel-server && npm run babel-app",
    "clean": "rm -rf dist/",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint --init --fix",
    "start": "npm run build && node dist/app.js",
    "start-dev": "nodemon --exec babel-node --presets env app.js",
    "pretest": "cross-env NODE_ENV=test npm run db-migrate:undo && cross-env NODE_ENV=test npm run db-migrate",
    "test": "NODE_ENV=test nyc --reporter=text --reporter=lcov mocha server/tests/**/*.test.js --timeout 100000 --exit",
    "db-migrate": "sequelize db:migrate",
    "db-migrate:undo": "sequelize db:migrate:undo:all",
    "db-seed": "sequelize db:seed:all",
    "db-setup": "npm run db-migrate:undo && npm run db-migrate && npm run db-seed"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cloudinary": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.1",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.41.0",
    "sequelize-cli": "^5.2.0",
    "slug": "^0.9.2",
    "swagger-ui-express": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^10.0.2",
    "nodemon": "^1.18.7",
    "nyc": "^13.1.0"
  }
}
